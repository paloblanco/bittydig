-- poke for resolution
poke(0x5f2c,3)

function _init()
	for x=0,7,1 do
		for y=0,99,1 do
			mset(x,y,1+flr(rnd(4)))
		end
	end
	cy=0
end

function _update60()
	if (btn(2)) cy += -1
	if (btn(3)) cy += 1
	camera(0,cy)
end

function _draw()
	cls()
	spr(0,8,cy+8)
	map()
end
